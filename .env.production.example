# ============================================
# SmartRouteHub Backend - Production Configuration
# ============================================
# Copy this file to .env.production and update values
# NEVER commit .env.production to version control

# Environment
NODE_ENV=production

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Database Configuration
DB_HOST=your-production-db-host
DB_PORT=5432
DB_USER=your-production-db-user
DB_PASSWORD=your-strong-production-db-password
DB_NAME=smartroutehub_prod
DB_SSL=true
DB_POOL_MIN=5
DB_POOL_MAX=20

# JWT Configuration
# IMPORTANT: Use a strong, randomly generated secret (minimum 32 characters)
JWT_SECRET=your-very-strong-production-jwt-secret-minimum-32-characters-use-random-generator
JWT_EXPIRES_IN=7d

# CORS Configuration
# List all allowed origins separated by commas
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=60000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/smartroutehub

# Google Maps API
GOOGLE_MAPS_API_KEY=your-production-google-maps-api-key

# Profiling Configuration
ENABLE_PROFILING=true
PROFILING_SLOW_QUERY_THRESHOLD=1000
PROFILING_SLOW_REQUEST_THRESHOLD=5000
ENABLE_QUERY_PROFILING=true
ENABLE_REQUEST_PROFILING=true
ENABLE_MEMORY_PROFILING=true
