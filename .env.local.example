# ============================================
# SmartRouteHub Backend - Local Configuration
# ============================================
# Copy this file to .env.local and update values

# Environment
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=smartroutehub
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-for-local-development
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=60000

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Profiling Configuration
ENABLE_PROFILING=true
PROFILING_SLOW_QUERY_THRESHOLD=1000
PROFILING_SLOW_REQUEST_THRESHOLD=5000
ENABLE_QUERY_PROFILING=true
ENABLE_REQUEST_PROFILING=true
ENABLE_MEMORY_PROFILING=true
